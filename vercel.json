{
  "cleanUrls": true,
  "trailingSlash": false,
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "buildCommand": "npm run build:vercel",
  "installCommand": "npm install --legacy-peer-deps",
  "crons": [
    {
      "path": "/api/cron/update-records",
      "schedule": "0 10 * * *"
    },
    {
      "path": "/api/cron/process-notion-mdx",
      "schedule": "0 0 * * *"
    }
  ]
}
