{
  "name": "@norkive/youtube-utils",
  "version": "1.0.0",
  "description": "Lightweight utility to extract YouTube video IDs from URLs. Zero dependencies, TypeScript support.",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "youtube",
    "youtube-id",
    "youtube-url",
    "extract",
    "parser",
    "utility",
    "typescript"
  ],
  "author": "ryoon.with.wisdomtrees@gmail.com",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ryoonwithinwisdomlights/MdxNorkive.git",
    "directory": "packages/youtube-utils"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.6.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
