{
  "name": "@norkive/lite-youtube-embed",
  "version": "1.0.0",
  "description": "Lightweight YouTube embed component with lazy loading, preconnect optimization, and WebP thumbnails",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./styles.css": "./dist/styles.css"
  },
  "scripts": {
    "build": "tsup src/index.tsx --format cjs,esm --dts --external react --external react-dom && npm run copy:css",
    "copy:css": "cp src/styles.css dist/styles.css",
    "dev": "tsup src/index.tsx --format cjs,esm --dts --external react --external react-dom --watch",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "youtube",
    "embed",
    "lite",
    "lazy-loading",
    "react",
    "component",
    "performance",
    "webp",
    "typescript"
  ],
  "author": "ryoon.with.wisdomtrees@gmail.com",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ryoonwithinwisdomlights/MdxNorkive.git",
    "directory": "packages/lite-youtube-embed"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.6.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
