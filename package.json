{
  "name": "MdxNorkive",
  "version": "1.0.0",
  "description": "Type-safe Notion to MDX knowledge archive starter kit.",
  "keywords": [
    "notion",
    "mdx",
    "nextjs",
    "starter-kit",
    "blog",
    "knowledge-base",
    "content-collections",
    "fumadocs"
  ],
  "homepage": "https://github.com/ryoonwithinwisdomlights/MdxNorkive.git",
  "license": "MIT",
  "packageManager": "pnpm@10.18.3",
  "repository": {
    "type": "git",
    "url": "https://github.com/ryoonwithinwisdomlights/MdxNorkive.git"
  },
  "author": {
    "name": "ryoon.with.wisdomtrees",
    "email": "ryoon.with.wisdomtrees@gmail.com",
    "url": "https://github.com/ryoonwithinwisdomlights"
  },
  "scripts": {
    "dev": "next dev",
    "build": "rm -rf .next && next build && pnpm run generate:mdx",
    "build:vercel": "NODE_OPTIONS='--max-old-space-size=4096 --no-warnings' next build",
    "start": "NODE_OPTIONS='--inspect' next build && next start",
    "lint": "next lint",
    "generate:mdx": "pnpm exec tsx scripts/notion-mdx-all-in-one.ts",
    "validate:mdx": "pnpm exec tsx scripts/validate-mdx-files.ts",
    "process-redis-images": "pnpm exec tsx scripts/redis-image-processor.ts",
    "measure:bundle": "pnpm exec tsx scripts/measure-performance.ts",
    "prettier:check": "prettier --check --ignore-unknown .",
    "prettier:write": "prettier --write --ignore-unknown .",
    "check:validity": "npm run prettier:check",
    "analyze": "ANALYZE=true npm run build",
    "bundle-report": "ANALYZE=true yarn build",
    "bundle:analyze": "cross-env ANALYZE=true npm run build",
    "measure:lighthouse": "bash scripts/measure-lighthouse.sh",
    "measure:all": "pnpm run build && pnpm run measure:bundle"
  },
  "dependencies": {
    "@bprogress/next": "^3.2.12",
    "@content-collections/core": "^0.10.0",
    "@content-collections/mdx": "^0.2.2",
    "@content-collections/next": "^0.2.6",
    "@fumadocs/content-collections": "1.2.5",
    "@headlessui/react": "^2.2.0",
    "@norkive/mdx-cloudinary-processor": "file:./packages/mdx-cloudinary-processor",
    "@norkive/mdx-safe-processor": "file:packages/mdx-safe-processor",
    "@norkive/mdx-ui": "file:./packages/mdx-ui",
    "@notionhq/client": "^2.2.5",
    "@orama/orama": "^3.1.3",
    "@radix-ui/react-alert-dialog": "^1.0.5",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-visually-hidden": "^1.2.3",
    "@tanstack/react-query": "^5.90.5",
    "@types/memory-cache": "^0.2.6",
    "@upstash/redis": "^1.35.1",
    "class-variance-authority": "^0.7.0",
    "cloudinary": "^2.7.0",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "fumadocs-core": "15.8.5",
    "fumadocs-ui": "15.8.5",
    "fuse.js": "^7.1.0",
    "gray-matter": "^4.0.3",
    "lodash-es": "^4.17.21",
    "lucide-react": "^0.525.0",
    "memory-cache": "^0.2.0",
    "next": "15.4.10",
    "notion-to-md": "^3.1.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-share": "^5.2.2",
    "sonner": "^1.7.1",
    "tailwind-merge": "^2.5.5",
    "tailwind-scrollbar-hide": "^4.0.0",
    "typescript": "^5.6.3",
    "zod": "^4.0.5",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^7.0.2",
    "@next/bundle-analyzer": "^15.5.6",
    "@tailwindcss/postcss": "^4.1.11",
    "@types/lodash-es": "^4.17.12",
    "@types/mdx": "^2.0.13",
    "@types/node": "24.0.13",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11",
    "ts-node": "^1.7.1",
    "tsx": "^4.21.0"
  },
  "browserslist": {
    "production": [
      "last 2 Chrome versions",
      "last 2 Edge versions",
      "last 2 Safari versions",
      "last 2 Firefox versions"
    ],
    "development": [
      "last 1 Chrome version"
    ]
  },
  "engines": {
    "node": ">=20.17.0"
  },
  "bugs": {
    "url": "https://github.com/ryoonwithinwisdomlights/MdxNorkive/issues",
    "email": "devseryun@gmail.com"
  }
}
